mkdir /usr/include/rpc /usr/include/rpcsvc /usr/include/rpcsvc
cp sunrpc/rpc/*.h /usr/include/rpc
cp sunrpc/rpcsvc/*.h /usr/include/rpcsvc
cp nis/rpcsvc/*.h /usr/include/rpcsvc

for arch in i686 arm x86_64;do
  mkdir /build/${arch}/usr/include/rpc /build/${arch}/usr/include/rpcsvc /build/${arch}/usr/include/rpcsvc
  cp sunrpc/rpc/*.h /build/${arch}/usr/include/rpc
  cp sunrpc/rpcsvc/*.h /build/${arch}/usr/include/rpcsvc
  cp nis/rpcsvc/*.h /build/${arch}/usr/include/rpcsvc
done;
