#!/bin/bash

if [ ! "$3" ];then
  echo "$0 <project> <seperator> <version> [<prefix> [<args>]]"
  exit 1;
fi;

prefix=${prefix}
DTSETCDIR=@sysconfdir@/@PACKAGE_NAME@

PROJ=${1}
shift;
VERSEP=${1}
shift
VERSION=${1}
shift
if [ "${1}" ];then
  PREFIX=${1};
  shift
 else
  PREFIX="/usr";
fi;

(cat <<EOF
VERSION="${VERSION}"
VERSEP="${VERSEP}";
PREFIX="${PREFIX}";
CONFOPT="$@";
EOF
if [ -d /usr/src/${PROJ}/${PROJ}${VERSEP}${VERSION} ] &&\
   [ ! -e /usr/src/${PROJ}/${PROJ}${VERSEP}${VERSION}/configure ];then
  echo "BUILDDIR=\"0\";";
fi;
) > ${DTSETCDIR)/${PROJ}
